<button {{action "openForm" formLabel}}  class="glyphicon glyphicon-pencil btn-lg"><span class="blog_component">{{formLabel}}</span></button>

{{#ic-modal-form id=formId  close-when=formWasSubmitted on-cancel='restoreModel'
open-when=isFormOpen

}}
	{{#ic-modal-title}}<h2>{{formTitle}}</h2>{{/ic-modal-title}}
	<form role="form">

		<div class="form-group">
			<div class="error">
				{{error}}
				</div>
		<label for="title">Title <span class="required">*</span></label>

		{{input id="title" class="form-control blog-title" value=postModel.title}}
		</div>
		<div class="form-group">
		<label for="text">Text<span class="required">*</span></label>
		{{textarea id="text" value=postModel.text class="form-control"}}
		</div>
		<button class="btn btn-primary" {{action "submitForm" formLabel}}>Save</button>
	</form>



{{/ic-modal-form}}