<div class='blog_component_container col-md-12' id="container">

	<div id="header">
		<h1> My Blog Site</h1>
	</div>


	<div class="col-md-4">
		<h2>Recent Posts</h2>

		<ul>
			{{#with this as currentController}}
				{{#each post in recentPosts}}
					<li>
						{{#link-to 'app.blog' post}} {{post.title}}{{/link-to}}
					</li>

				{{/each}}
			{{/with}}
		</ul>
	</div>
	<div id="content" class="col-md-8">
		<div id="main">
			{{#with this as currentController}}
				{{#each post in currentPosts}}
					{{blog-component postModel=post currController=currentController}}
				{{/each}}
			{{/with}}
		</div>

		<div id="side">


			{{modal-component formId='new-form' formLabel='New Form' currController=this}}
			{{delete-modal postLabel='All Posts' label='Delete All Posts' currController=this}}
		</div>
	</div>





</div>


